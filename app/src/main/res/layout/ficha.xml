<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vampiro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp">


    <TextView
        android:id="@+id/idFicha"
        android:layout_width="77dp"
        android:layout_height="27dp"
        android:background="#004CAF50"
        android:gravity="center"
        android:text="ID 0000"
        android:textColor="#B7A2FF"
        android:orientation="horizontal"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.5"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="319dp"
        android:layout_height="77dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp"
        android:background="#00EE1717"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Caín, del Clan Inexistente, de generación 1 y Chiquillo de nadie"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="#B7A2FF"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.493"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>